using namespace std;

class Animal{
    public:

    string name;
    int health;
    int maxHealth; // Its for my combat system
    int attackPower;

    // Bunda static aşşa tarafa int yazıp postalıyon
    // Static sadece hangi tarafta static olduğunu belirtmek içün
    static int AnimalCount;
    Animal(){
        name = "Unknown";
        maxHealth, health = 1;
        attackPower = 1;
    }

    Animal(string n, int h, int aP){
        name = n;
        maxHealth, health = h;
        attackPower = aP;
    }
};

int Animal::AnimalCount = 0;

class Flyable : public Animal{
    public:
    void fly(){
        cout << name << " flied" << endl;
